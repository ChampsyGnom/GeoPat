<Window x:Class="Emash.GeoPatNet.Dashboard.Implementation.Views.DashboardDialogItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Path=Title}" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>

        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <RadioButton IsChecked="{Binding Path=IsFolder,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="2" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Dossier"></TextBlock>
        </RadioButton>
        <RadioButton  IsChecked="{Binding Path=IsTable,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Margin="2" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="Table"></TextBlock>
        </RadioButton>

        <TextBlock Visibility="{Binding Path=IsFolderVisibility,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Text="Nom : " Grid.Column="0" Margin="2"></TextBlock>
        <TextBox  Text="{Binding Path=FolderName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="300"  Visibility="{Binding Path=IsFolderVisibility,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"  Grid.Row="2" Grid.Column="1" Margin="2"></TextBox>

        <TextBlock Visibility="{Binding Path=IsTableVisibility,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Text="Métier : " Grid.Column="0" Margin="2"></TextBlock>
        <ComboBox x:Name="comboSchemas" ItemsSource="{Binding Path=SchemaInfos,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"  Width="300"  Visibility="{Binding Path=IsTableVisibility,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"  Grid.Row="2" Grid.Column="1" Margin="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=SchemaName,Mode=OneWay}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Visibility="{Binding Path=IsTableVisibility,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Text="Table : " Grid.Column="0" Margin="2"></TextBlock>
        <ComboBox SelectedItem="{Binding Path=SelectedTableInfo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding ElementName=comboSchemas,Path=SelectedItem.TableInfos,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"  Width="300"  Visibility="{Binding Path=IsTableVisibility,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"  Grid.Row="3" Grid.Column="1" Margin="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=DisplayName,Mode=OneWay}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <Grid Margin="8"  Grid.ColumnSpan="2" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button IsCancel="True" Margin="8" Grid.Column="0">
                <TextBlock Text="Annuler" Margin="8"></TextBlock>
            </Button>
            <Button Click="Button_Click" IsDefault="True" Margin="8" Grid.Column="1">
                <TextBlock Text="Valider" Margin="8"></TextBlock>
            </Button>
        </Grid>
    
    </Grid>
</Window>
